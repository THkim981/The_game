{
  "name": "the-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <24"
  },
  "scripts": {
    "dev": "vite",
    "server": "node server/index.cjs",
    "dev:full": "concurrently -k \"npm run server\" \"npm run dev\"",
    "build": "tsc -b && vite build",
    "cf:migrate:local": "npx wrangler d1 migrations apply the-game --local --persist-to .wrangler/state",
    "cf:dev": "npm run build && npx wrangler pages dev dist --d1 DB=1c938546-6112-4fc2-803d-af901a8e515f --persist-to .wrangler/state",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "tsc -b && vite build --mode ghpages && gh-pages -d dist",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260101.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  },
  "volta": {
    "node": "20.19.6"
  }
}
